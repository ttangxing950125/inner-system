<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.deloitte.crm.mapper.StockCnInfoMapper">


    <select id="findByCode" resultType="stockCnInfo">
        select *
        from stock_cn_info
        where stock_code = #{secIssInfoCode}
    </select>

    <select id="selectListByEntityCode" parameterType="java.lang.String" resultType="java.lang.Integer">
        SELECT count(0) FROM stock_cn_info a
        LEFT JOIN entity_stock_cn_rel b ON a.stock_dq_code = b.stock_dq_code
        WHERE a.stock_status = 6 and
	    b.entity_code = #{entityCode}
    </select>

    <select id="selectStockCnList" parameterType="java.util.List"
            resultType="com.deloitte.crm.domain.StockCnInfo">
        select a.*
        from stock_cn_info a
         LEFT JOIN entity_stock_cn_rel b
         on a.stock_dq_code = b.stock_dq_code
        <where>
            1=1
            <if test="codeList != null  and codeList !=''">
                and b.entity_code in
                <foreach item="item" collection="codeList" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
        </where>
    </select>
</mapper>